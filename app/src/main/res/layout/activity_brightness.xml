<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".BrightnessActivity"
    android:background="@drawable/opaque_lillies">
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent">
        <ImageView
            android:id="@+id/editScreen_status"
            android:layout_width="match_parent"
            android:layout_height="15dp"

            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/status_dots_1"
            />
        <TextView
            android:id="@+id/editPhotoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Brightness"
            android:fontFamily="@font/lobster2"
            android:textColor="#2a6e3a"
            android:textSize="40sp"
            android:textStyle="bold"
            />
        <ImageView
            android:id="@+id/editPhotoImage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="19"
            android:scaleType="centerCrop"
            android:layout_margin="20dp"
            android:src="@drawable/alma465"/>
        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:max="510"
            android:progress="255"
            android:theme ="@style/Button"
            android:thumbTint="#15311e"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">
        </SeekBar>
        <Button
            android:id="@+id/okayBrightness"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="100dp"
            android:fontFamily="@font/lato_medium"
            android:background="@drawable/second_roundedbutton"
            android:text="Okay"
            android:backgroundTint="@color/theme"
            android:textColor="@color/white"
            android:textSize="18dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
            <ImageButton
                android:id="@+id/backbutton_brightness_photo"
                android:layout_width="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_height="40dp"
                android:background="@drawable/back_arrow" />
            <ImageButton
                android:id="@+id/homebutton_brightness_photo"
                android:layout_width="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_height="35dp"
                android:background="@drawable/home_icon" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
