                android:visibility="visible" />

            <View
                android:id="@+id/popColor20"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_margin="15dp"
                android:background="@drawable/color_square"
                android:visibility="visible" />

            <View
                android:id="@+id/popColor21"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_margin="15dp"
                android:background="@drawable/color_square"
                android:visibility="visible" />

            <View
                android:id="@+id/popColor22"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_margin="15dp"
                android:background="@drawable/color_square"
                android:visibility="visible" />

            <View
                android:id="@+id/popColor23"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_row="2"
                android:layout_column="3"
                android:layout_margin="15dp"
                android:background="@drawable/color_square"
                android:visibility="visible" />

        </GridLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
            <ImageButton
                android:id="@+id/homebutton_sc_photo"
                android:layout_width="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_height="40dp"
                android:background="@drawable/back_arrow" />
            <ImageButton
                android:id="@+id/backbutton_sc_photo"
                android:layout_width="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_height="35dp"
                android:background="@drawable/home_icon" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>

