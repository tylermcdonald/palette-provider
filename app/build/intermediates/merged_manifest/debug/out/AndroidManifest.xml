<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pstcstest.paletteprovider"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="30" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.PaletteProvider" >
        <activity android:name="com.pstcstest.paletteprovider.ResultsActivity" />
        <activity android:name="com.pstcstest.paletteprovider.SavedColorsActivity" />
        <activity android:name="com.pstcstest.paletteprovider.ExtractColorActivity" />
        <activity android:name="com.pstcstest.paletteprovider.EditPhotoActivity" />
        <activity android:name="com.pstcstest.paletteprovider.ErrorActivity" />
        <activity android:name="com.pstcstest.paletteprovider.HomeActivity" />
        <activity android:name="com.pstcstest.paletteprovider.CameraActivity" />
        <activity android:name="com.pstcstest.paletteprovider.LoadingActivity" />
        <activity android:name="com.pstcstest.paletteprovider.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>